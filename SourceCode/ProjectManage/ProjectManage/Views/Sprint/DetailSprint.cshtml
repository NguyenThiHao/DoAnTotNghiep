@model Model.EF.Sprint
@{
    ViewBag.Title = "DetailSprint";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<!--Vùng hiển thị chi tiết 1 sprint-->
<div class="col-lg-7" style="padding: 0px;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align: left; font-size: 25px">
                Detail Sprint
                @Html.ActionLink("Edit", "EditSprint", "Sprint", new { idSprint = Model.idSprint }, new { @class = "btn btn-default", style = "float: right;" })
            </div>
            <div class="panel-body">
                    <div class="col-md-16 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <br />
                                <div class="form-horizontal form-label-left">

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Sprint Name:</label>
                                        <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.sprintName</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Phase Name: </label>
                                        <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@ViewBag.namePhase</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Description: </label>
                                        <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.description</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Start Date: </label>
                                        <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.createdDate</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">End Date: </label>
                                        <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.endDate</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Reporter: </label>
                                        <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@ViewBag.nameReporter</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Status</label>
                                        <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.status</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!--Vùng hiển thị danh sách các sprint trong phase-->
<div class="col-lg-5" style="padding: 0px;">
    @Html.Action("ListTaskInSprint", "Sprint", new { idSprint = Model.idSprint })
</div>





