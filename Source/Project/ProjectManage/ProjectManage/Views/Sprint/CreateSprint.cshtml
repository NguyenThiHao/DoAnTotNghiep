@using ProjectManage.Models;
@model Sprint
@{
    ViewBag.Title = "CreatePhase";
    var typeOfPhase = new List<String>
            { 
                 "Create",
                 "Correct",
                 "Test",
                 "Review",
                 "Code",
                 "Design",     
            };
    ViewBag.typeOfPhase = typeOfPhase;
    ViewBag.Title = "CreateSprint";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="col-lg-2"></div>
<div class="col-lg-8">
    <div class="panel panel-default">
        <div class="panel-heading" style="text-align: left; font-size: 25px">
            Create Phase
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <!-- /.table-responsive -->
            <div class="well">

                <div class="col-md-16 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <br />
                            <div class="form-horizontal form-label-left">
                                @using (Html.BeginForm())
                                {
                                    @*@Html.AntiForgeryToken()*@


                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Sprint Name <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.name_sprint, new { @class = "form-control", placeholder = "Sprint Name" })
                                            @*@Html.ValidationMessageFor(model => model.name_sprint)*@
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Planed Start <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.plan_start_date, new { @class = "form-control", placeholder = "Planded Start", type = "date" })
                                            @*@Html.ValidationMessageFor(model => model.start_date)*@
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">End Date <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.plan_end_date, new { @class = "form-control", placeholder = "End Date", type = "date" })
                                            @*@Html.ValidationMessageFor(model => model.end_date)*@
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Estimate Time <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.estimate_time, new { @class = "form-control", placeholder = "Estimate Time" })
                                            @*@Html.ValidationMessageFor(model => model.estimate_time)*@
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Description <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = "8", placeholder = "Description" })
                                            @*@Html.ValidationMessageFor(model => model.description)*@
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Type <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.DropDownListFor(model => model.type, new SelectList(ViewBag.typeOfPhase), new { @class = "form-control", placeholder = "Type" })
                                            @*@Html.ValidationMessageFor(model => model.type)*@
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Status <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.status, new { @class = "form-control", placeholder = "Status" })
                                            @*@Html.ValidationMessageFor(model => model.status)*@
                                        </div>
                                    </div>
                                }
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary" value="Cancel">Cancel</button>
                                        <button type="submit" class="btn btn-success" value="Create">Create</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
    </div>
                                    </div>



