@using ProjectManage.Models;
@model List<Task>


<div class="panel panel-default">
    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 151px;">
                    <a href="#">Order by Priority</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr class="gradeA odd" role="row">
                        <td class="sorting_1">
                            <a href="@Url.Action("DetailTask", "Task", new {@id_task = item.id_task })"></a> @item.summary_task
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
