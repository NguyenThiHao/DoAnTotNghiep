@*Vùng hiển thị nội dung chi tiết của dự án*@
<div class="col-lg-7" style="padding: 0px;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align: left; font-size: 25px">
                Detail Project
                @Html.ActionLink("Edit", "EditProject", "Project", new { idProject = Model.idProject }, new { @class = "btn btn-default", style = "float: right;" })
            </div>
            <div class="panel-body">
                    <div class="col-md-16 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <br />
                                    <div class="form-horizontal form-label-left">
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Project Name:</label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.projectName</label>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Leader: </label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.leaderName Nguyễn Thị Hảo</label>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Total members: </label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.totalMembers</label>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Type of Project: </label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.typeProject</label>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Total Phase: </label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.totalPhase</label>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Start Date</label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.startDate</label>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Plan End Date</label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.endDate</label>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Description: </label>
                                            <label class="control-label col-md-9 col-sm-9 col-xs-12" style="text-align: left;">@Model.description</label>
                                        </div>
                                    </div>
                                       
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/. Detail project-->

