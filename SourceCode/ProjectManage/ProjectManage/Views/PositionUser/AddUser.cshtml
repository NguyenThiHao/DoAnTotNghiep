@using Model.EF;
@model PositionUser
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<div class="col-lg-2"></div>
<div class="col-lg-8">
    <div class="panel panel-default">
        <div class="panel-heading" style="text-align: left; font-size: 25px">
            Add User 
        </div>
        <div class="panel-body">
            <div class="col-md-16 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal form-label-left">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Project <span class="required">*</span></label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                        @Html.DropDownListFor(model => model.idProject, new SelectList(ViewBag.GetListProject, "idProject", "projectName", "Project"), new { @class = "form-control", rows = "6", placeholder = "Project" })
                                        <div class="message">
                                            @Html.ValidationMessageFor(model => model.idProject)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">User <span class="required">*</span></label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                        @Html.DropDownListFor(model => model.idUser, new SelectList(ViewBag.ListUser, "idUser", "userName", "User"), new { @class = "form-control", placeholder = "Type of Project" })
                                        <div class="message">
                                            @Html.ValidationMessageFor(model => model.idUser)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Position<span class="required">*</span></label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                        @Html.DropDownListFor(model => model.position, new SelectList(ViewBag.ListPosition), new { @class = "form-control", placeholder = "Type of Project" })
                                        <div class="message">
                                            @Html.ValidationMessageFor(model => model.position)
                                        </div>
                                    </div>
                                </div>

                                    <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                            <button type="reset" class="btn btn-primary" value="Cancel">Cancel</button>
                                            <button type="submit" class="btn btn-success" value="Create">Create</button>
                                        </div>
                                    </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




