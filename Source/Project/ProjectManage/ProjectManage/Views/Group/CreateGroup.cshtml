@model ProjectManage.Models.Group
@{
    ViewBag.Title = "CreateGroup";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="col-lg-2"></div>
<div class="col-lg-8">
    <div class="panel panel-default">
        <div class="panel-heading" style="text-align: left; font-size: 25px">
            Create Develop Group
        </div>
        <div class="panel-body">
            <div class="well">
                <div class="col-md-16 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <br />
                            <div class="form-horizontal form-label-left">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Group Name <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.nameGroup, new { @class = "form-control", placeholder = "Group Name" })
                                            <div class="message"><span id="messNameGroup"></span></div>
                                            @Html.ValidationMessageFor(model => model.nameGroup)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Description <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = "6", placeholder = "Description" })
                                            <div class="message"><span id="messDescription"></span></div>
                                            @Html.ValidationMessageFor(model => model.description)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Project <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.idProject, new { @class = "form-control", placeholder = "Project" })
                                            <div class="message"><span id="messAuthorize"></span></div>
                                            @Html.ValidationMessageFor(model => model.idProject)
                                        </div>
                                    </div>
                                }

                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary">Cancel</button>
                                        <button id="btnSubmit" type="submit" class="btn btn-success" value="Create">Create</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style type="text/css">
    .message {
        float: left;
        padding: 5px;
        color: red;
        text-align: left;
    }

    .required {
        color: red;
    }
</style>


