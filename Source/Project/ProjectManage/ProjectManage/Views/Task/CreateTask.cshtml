@using ProjectManage.Models;
@model Task
@{
    ViewBag.Title = "Task";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="col-lg-2"></div>
<div class="col-lg-8">
    <div class="panel panel-default">
        <div class="panel-heading" style="text-align: left; font-size: 25px">
            Create Task
        </div>
        <div class="panel-body">
            <div class="well">
                <div class="col-md-16 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <br />
                            <div class="form-horizontal form-label-left">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Task Name <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.task_name, new { @class = "form-control", placeholder = "Task Name" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.task_name)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Summary <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.summary_task, new { @class = "form-control", placeholder = "Summary" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.summary_task)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Priority <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.priority, new { @class = "form-control", placeholder = "Priority" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.priority)
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Sprint <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.id_sprint, new { @class = "form-control", placeholder = "Sprint" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.id_sprint)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Type of Task <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.type, new { @class = "form-control", placeholder = "Type " })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.type)
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Plan Start Date <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.plan_start_date, new { @class = "form-control", placeholder = "Plan Start Date", type = "date" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.plan_start_date)
                                            </div>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">End Date <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.plan_end_date, new { @class = "form-control", placeholder = "Plan End Date", type = "date" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.plan_end_date)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Estimate Time <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.estimate_time, new { @class = "form-control", placeholder = "Estimate Time" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.estimate_time)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Assignee to <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextBoxFor(model => model.assignee_to, new { @class = "form-control", placeholder = "Assignee to " })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.assignee_to)
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Description <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = "10", placeholder = "Description" })
                                            <div class="message">
                                                @Html.ValidationMessageFor(model => model.description)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                            <button type="reset" class="btn btn-primary" value="Cancel">Cancel</button>
                                            <button type="submit" class="btn btn-success" value="Create">Create</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<style type="text/css">
    .message {
        float: left;
        padding: 5px;
        color: red;
        text-align: left;
    }

    .required {
        color: red;
    }
</style>

