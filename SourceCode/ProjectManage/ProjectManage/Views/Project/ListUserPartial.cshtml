@model List<Model.ViewModel.UserByProject>
@{
    int i = 1;
}
<div class="col-lg-12" style="padding-left: 0px;">
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-hover dataTable no-footer">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Account</th>
                    <th>Position</th>
                    <th>Joined Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr class="gradeA odd" role="row" id="row_@item.idUser@item.idProject">
                            <td class="sorting_1">
                                <span>@(i++)</span>
                            </td>
                            <td class="sorting_1">
                                <a href="/PositionUser/ViewDetail?idUser=@item.idUser&idProject=@item.idProject">@item.account</a>
                            </td>
                            <td class="sorting_1">
                                <span>@item.position</span>
                            </td>
                            <td class="sorting_1">
                                <span>@item.joinedDate</span>
                            </td>
                            <td class="sorting_1">
                                <span>@item.status</span>
                            </td>
                            <td> 
                                    @Ajax.ActionLink("Remove", "RemoveUser", "Project", new { idUser = item.idUser, idProject = item.idProject }, new AjaxOptions
                               {
                                   Confirm = "Do you want remove this user from project?",
                                   OnComplete = "$('#row_" + @item.idUser + @item.idProject+ "').remove()",
                                   HttpMethod = "Delete"
                               })             
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <div class="col-md-8 input-group custom-search-form" style="padding: 10px;">
                <input type="text" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">
                        <i class="fa fa-search">Search</i>
                    </button>
                </span>
            </div>
            @Html.ActionLink("Add User", "AddUser", "PositionUser", null, new { @class = "btn btn-success", style = "margin: 10px; float: right;" })
        </table>

    </div>
</div>
