@model List<Model.EF.Task>
<!--Vùng hiển thị list các sprint trong 1 phase-->
<div class="col-lg-12" style="padding-left: 0px;">
    <div class="panel panel-default">
        <div class="panel-heading" style="text-align: left; font-size: 25px">
            List Task in Sprint
        </div>
        <div class="panel-body" style="padding-bottom: 15px;">
            <div class="panel panel-default">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeA odd" role="row">
                                <td class="sorting_1">
                                    <a href="/Task/DetailTask?idTask=@item.idTask">@item.taskName</a>
                                </td>
                                <td class="sorting_1">
                                    <span>@item.status</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @Html.ActionLink("Create Task", "CreateTask", "Task", new {idSprint = ViewBag.idSprint }, new { @class = "btn btn-success" })
        </div>
    </div>
</div>

