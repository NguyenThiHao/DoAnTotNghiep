@{
    ViewBag.Title = "Login";
}
@model ProjectManage.Models.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Project Manage</title>
</head>
<body>
    <!--FORM LOGIN-->
    <div class="col-md-4 col-md-offset-4" style="margin-top: 100px">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">      
                @using(Html.BeginForm("Login", "Login", FormMethod.Post)){
                    @Html.ValidationSummary(false, "", new {@class = "text-danger"})   
                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.account, new { @class = "form-control", placeholder = "Account", @autofocus = "autofocus"})
                          
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.rememberMe) Remember Me
                            </label>
                        </div>
                        <button class="btn btn-lg btn-success btn-block" type="submit"  name="btnSubmit">Login</button>
                    </fieldset>
                }
                
            </div>
        </div>
    </div>
</body>
</html>

